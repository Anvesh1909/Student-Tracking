# Docker Compose environment variables (sample)
# Copy to .env.docker and adjust values before running

# Django config
DEBUG=False
SECRET_KEY=change_me_to_a_secure_key
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_BASE_URL=http://localhost:3000

# Postgres credentials used by docker-compose
POSTGRES_DB=student_tracking
POSTGRES_USER=student_user
POSTGRES_PASSWORD=student_password

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_gmail@gmail.com
EMAIL_HOST_PASSWORD=your_gmail_app_password
DEFAULT_FROM_EMAIL=your_gmail@gmail.com
