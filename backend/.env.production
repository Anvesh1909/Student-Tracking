# Backend Production Environment Variables
# Copy these to Render Dashboard when deploying

# Django Settings
DEBUG=False
SECRET_KEY=your_generated_secret_key_here

# Database (PostgreSQL on Render)
DATABASE_URL=postgresql://user:password@host:5432/database

# Security
ALLOWED_HOSTS=your-backend.onrender.com,localhost
CORS_ALLOWED_ORIGINS=https://your-frontend.onrender.com

# Email Configuration (Gmail)
EMAIL_HOST_USER=your_gmail@gmail.com
EMAIL_HOST_PASSWORD=your_gmail_app_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=your_gmail@gmail.com

# Frontend URLs
FRONTEND_URL=https://your-frontend.onrender.com
FRONTEND_BASE_URL=https://your-frontend.onrender.com

# JWT Configuration (in seconds)
ACCESS_TOKEN_LIFETIME=3600
REFRESH_TOKEN_LIFETIME=86400

# Site Settings
SITE_NAME=Student Learning & Performance Tracking Platform
